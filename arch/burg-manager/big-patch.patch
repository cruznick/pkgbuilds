+	    n) echo "You can Install this later from AUR " && sleep 5 && exit ;;
+	*) echo "Continuing" ;;    
+ 	esac
+
+
+echo -ne "$verde"
+echo "Dowloading sources"
+burgi=$(pacman -Qq burg-bzr | wc -l)
+burei=$(pacman -Qq burg-emu | wc -l)
+burti=$(pacman -Qq burg-themes | wc -l)
+
