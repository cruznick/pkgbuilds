+	cd burg-bzr
+	makepkg -sfi
+	cd .. 
+   fi
+
+  if [ "$burei" == 1  ]
+     then 
+	echo -ne "$verde"
+	echo Burg-emu already installed moving to next pkg
+     else
+	echo -ne "$grisclaro"
+	wget http://aur.archlinux.org/packages/burg-emu/burg-emu.tar.gz
+	tar xzf burg-emu.tar.gz
+	cd burg-emu
+	makepkg -sfi
+	cd ..
+   fi
+
+  if [ "$burti" == 1  ]
+     then 
+	echo -ne "$verde"
+	echo Burg-themes already installed moving to next pkg
+     else
+	echo -ne "$grisclaro"
+	wget http://aur.archlinux.org/packages/burg-themes/burg-themes.tar.gz
+	tar xzf burg-themes.tar.gz
+	cd burg-themes
+	makepkg -sfi
+	cd ..
+  fi
+
+unset burgi
+unset burei
+unset burti
+
+sleep 3 
+
+burgi=$(pacman -Qq burg-bzr | wc -l)
+burei=$(pacman -Qq burg-emu | wc -l)
+burti=$(pacman -Qq burg-themes | wc -l)
+
+  if [ "$burgi" == 1  ] && [ "$burei" == 1  ] && [ "$burti" == 1  ]
+     then
+	echo -ne "$verde"
+	echo "All pkgs succefully installed"
+	rm -rf /tmp/burg-manager-install
+	sleep 5 && exit 0
+     else
+	echo -ne "$rojo"
+	echo "Some pkgs didn't install please run again the installer"
+	rm -rf /tmp/burg-manager-install
+	sleep 5 && exit 1
+   fi
